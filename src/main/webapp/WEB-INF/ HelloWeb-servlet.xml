<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
>

    <!-- FIXME    Change name of the package to your base-package -->
    <xsi:xsi :schemaLocation xml:space="preserve">http://www.springframework.org/schema/mvc </xsi:xsi:schemaLocation>
    <context:component-scan base-package="com.panchalprogrammingacademy"/>
    <mvc:annotation-driven/>

    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/jsp/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

</beans>
